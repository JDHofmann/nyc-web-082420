<h1><%= @post.title %></h1>
<h4>Written by<%= link_to @post.blogger.name, "/bloggers/#{@post.blogger.id}" %></h4>
<hr>


<% if session[:views] < 3 %>
    <p><%= @post.content %></p>
    <p><%= @post.likes %><%= link_to "👍", "/posts/like/#{@post.id}", method: 'patch' %></p>
<% else %>
    <iframe width="966" height="543" src="https://www.youtube.com/embed/BFNekjEgvuk" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <%= button_to "Skip AD, I swear I watched this...", "/session/reset_views", method: "patch" %>
<% end %>