<h1>Candles#index</h1>
<p>Find me in app/views/candles/index.html.erb</p>


<div class="index-container">
  <% @candles.each do |candle| %>
    <div class="index-card">
      <h3><%= link_to candle.name, candle_path(candle) %></h3>
      <img src="<%= candle.img_url %>" alt="<%candle.name%>" class="index-img">
      <p><%# link_to candle.name, candle %></p>
    </div>
  <% end %>
</div>